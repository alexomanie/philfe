---
// Component Imports
import BaseLayout from '../layouts/BaseLayout.astro';
import { Markdown } from 'astro/components';
const { title, description, author, tags } =
	Astro.props.content;
---

<BaseLayout>
  <article class="prose sm:prose-sm lg:prose-lg xl:prose-xl mt-16">
    <h1>{title}</h1>
    <h3>Verfasst von: {author}</h3>
    <Markdown>
      <slot/>
    </Markdown>
  </article>
</BaseLayout>